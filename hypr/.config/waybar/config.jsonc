{
  "layer": "top",
  "position": "top",
  "exclusive": true,
  "passthrough": false,
  "ipc": false,
  "reload_style_on_change": true,
  "margin-bottom": -2,
  "margin-top": 2,
  "modules-left": ["custom/launcher", "cpu","memory", "hyprland/workspaces"],
  "modules-right":[
    "pulseaudio",
    "backlight",
    "battery", 
    "clock",
    "tray"
  ],
  "tray": {
    "icon-size": 18,
    "spacing": 5
  },
  "cpu": {
    "interval": 15,
    "format": "ï‹› {}%",
    "max-length": 10
  },
  "memory": {
    "interval": 30,
    "format": "ïƒ‰ {}%",
    "max-length": 10
  },
  "clock": {
